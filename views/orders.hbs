<h1 class="mb-4">Ваши заказы</h1>
<div class="row g-3">
  {{#each orders}}
    <div class="col-12">
      <div class="card shadow-sm p-3">
        <h5 class="mb-2">Заказ №{{this._id}} <span class="text-muted fs-6">от {{this.createdAt}}</span></h5>
        <ul class="list-group mb-2">
          {{#each this.products}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span>
                <a href="/products/{{this.product._id}}" class="fw-semibold">{{this.product.name}}</a>
                <span class="text-muted">× {{this.quantity}}</span>
              </span>
              <span>{{multiply this.price this.quantity}}₽</span>
            </li>
          {{/each}}
        </ul>
        <div class="fw-bold text-end">Итого: <span class="text-success">{{this.total}}₽</span></div>
      </div>
    </div>
  {{/each}}
</div>
