<h1>Profile</h1>

{{#if error}}
  <p style="color: red;">{{error}}</p>
{{/if}}

<div class="position-relative d-inline-block avatar-container">
    <img src="{{#if user.avatar}}{{user.avatar}}{{else}}/public/avatars/defaultAvatar.jpg{{/if}}" alt="User Avatar" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
    <span class="avatar-edit-icon position-absolute top-50 start-50 translate-middle" data-bs-toggle="modal" data-bs-target="#avatarModal" title="Изменить аватар">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
        </svg>
    </span>
</div>
<div>
    <h2>{{user.username}}</h2>
    <p>Баланс: {{user.balance}}Р</p>
    <input placeholder="Введите Email..." type="email" value="{{user.email}}"/>
</div>

<div class="modal fade" id="avatarModal" tabindex="-1" aria-labelledby="avatarModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="avatarModalLabel">Изменить аватар</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="avatarForm" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="avatarInput" class="form-label">Выберите новый аватар</label>
            <input class="form-control" type="file" id="avatarInput" name="avatar" accept="image/*">
          </div>
          <button type="submit" class="btn btn-primary">Загрузить</button>
        </form>
      </div>
    </div>
  </div>
</div>